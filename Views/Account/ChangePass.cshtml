@model project_2564.Models.User
@{
    ViewData["Title"] = "เปลี่ยนรหัสผ่าน";
}
</br>
<div class="container border m-2" style="padding: 30px">
    <form method="POST">
        <h1 class="text-info">เปลี่ยนรหัสผ่าน</h1>

        <div class="form-group row">
            <div class="col col-3">
                <label>ชื่อผู้ใช้งาน</label>
                <input type="text" asp-for="username" class="form-control" readonly>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>

            <div class="col col-3">
                <label>รหัสผ่านใหม่</label>
                <input type="password" asp-for="password" class="form-control" required>
            </div>

            <div class="col col-3">
                <label>ยืนยันรหัสผ่าน</label>
                <input type="password" name="check_newpassword" class="form-control" required>
            </div>

        </div>

        <div class="row">
            <div class="col">
                <span class="text-danger">@ViewBag.message</span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col col-3">
                <button type="submit" class="btn btn-success btn-block">เปลี่ยนรหัสผ่าน</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}