@model project_2564.Models.Role
@{
    ViewData["Title"] = "AddRole";
}
</br>

<form method="post">
    <div class="container border" style="padding: 30px; background-color: white;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info"><i class="fas fa-tags"></i> เพิ่มสิทธิการใช้งาน</h2>
        </div>

        <div class="form-group row">
            <div class="col-md-3">
                <label>ชื่อสิทธิ</label>
                <input type="text" asp-for="@Model.name" class="form-control form-control-sm" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>

        <div class="table-responsive">
            <table  class="table table-striped table-bordered text-center ">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ดูข้อมูล</th>
                        <th scope="col">เพิ่มข้อมูล</th>
                        <th scope="col">แก้ไขข้อมูล</th>
                        <th scope="col">ลบข้อมูล</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">จัดการคิว</th>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_view_queue">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_add_queue">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_edit_queue">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_delete_queue">
                        </td>
                    </tr>

                    <tr>
                        <th scope="row">จัดผู้ใช้งาน</th>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_view_user">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_add_user">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_edit_user">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_delete_user">
                        </td>
                    </tr>

                    @* <tr>
                        <th scope="row">จัดการโต๊ะ</th>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_view_settings">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_add_settings">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_edit_settings">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_delete_settings">
                        </td>
                    </tr> *@

                    <tr>
                        <th scope="row">จัดการสิทธิ</th>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_view_role">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_add_role">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_edit_role">
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model.allow_delete_role">
                        </td>
                    </tr>

                    <tr>
                        <th scope="row">รายงาน</th>
                        <td colspan="4">
                            <input type="checkbox" asp-for="@Model.allow_report">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <br>
        <div class="text-center justify-content-center">
            <button type="submit" class="btn btn-success">บันทึก</button>
        </div>
    </div>
</form>


@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
